div(flex-container='row', flex-column='3', ng-controller='GlobalIndicatorsCtrl')

    div.indicator(flex-item='1',ng-if="useEUR ? cmc.pairs.ETHEUR : cmc.pairs.ETHUSD")
        div.label ETH/{{useEUR ? 'EUR' : 'USD'}}
        div.val(ng-bind="(useEUR ? '€' : '$')+cmc.pairs[useEUR ? 'ETHEUR' : 'ETHUSD']")

    div.fiatSwitch(flex-container='row')
        span $
        lx-switch(ng-model='$root.useEUR')
        span €
