.row(class='p+',ng-controller='exchangeCtrl as exchange',ng-show='exchange.token')
    .col-xs-12.col-lg-9.col-xs-12
        .row
            .col-xs-12.col-lg-8.mt-3
                .col.border
                    #mainChart
            .col-md-4.col-xs-4.mt-3.d-flex.align-content-stretch.flex-wrap
                .col.border(style='max-height: 400px; overflow-y: scroll')
                    .row(ng-controller='orderbookCtrl')
                        .col-12
                            include ./orderbook
            .col-md-8.col-xs-6.mt-3.d-flex.align-content-stretch.flex-wrap
                .col.border
                    .row.navRow
                        ul.nav.nav-tabs
                            li.nav-item
                                a.nav-link.active(data-toggle='tab', data-target='#wallet') Wallet
                            li.nav-item
                                a.nav-link(data-toggle='tab', data-target='#orders')
                                    | My
                                    | Orders
                            li.nav-item
                                a.nav-link(data-toggle='tab', data-target='#trades')
                                    | My
                                    | Trades
                    .row.mt-3.mb-3
                        .tab-content.col
                            #wallet.tab-pane.fade.in.active.show
                                .row
                                    .col-sm-6
                                        .row
                                            .col
                                                h5 Exchange
                                                .row
                                                    .col-md-6 {{exchange.onExchange.toFixed(3)}} {{exchange.symbol}}
                                                    .col-md-6  {{exchange.user.ethBal.onExchange.toFixed(6)}} ETH
                                        .row.mt-3
                                            .col
                                                h5 Wallet
                                                .row
                                                    .col-md-6 {{exchange.onWallet.toFixed(3)}} {{exchange.symbol}}
                                                    .col-md-6  {{exchange.user.ethBal.onWallet.toFixed(6)}} ETH
                                    .col-sm-6 B
                            #orders.tab-pane.fade.in
                            #trades.tab-pane.fade.in
            .col-lg-4.col-xs-12.mt-3.d-flex.align-content-stretch.flex-wrap
                .col.border
                    .row.navRow
                        ul.nav.nav-tabs
                            li.nav-item
                                a.nav-link.active(data-toggle='tab', data-target='#buy') Buy
                            li.nav-item
                                a.nav-link(data-toggle='tab', data-target='#sell') Sell
                    .row.mt-3.mb-3
                        .tab-content.col(ng-controller='placeOrderCtrl')
                            - var side = 'BUY'
                                #buy.tab-pane.fade.in.active.show
                                    include ./placeOrder
                            - var side = 'SELL'
                                #sell.tab-pane.fade.in
                                    include ./placeOrder

    .col-xs-12.col-lg-3.order-lg-first.mt-3.d-flex.align-content-stretch.flex-wrap
        .col.border(style='overflow-y: scroll;')
            .row(style='max-height: 778px;')
                .col-lg-12
                    include ./tradeHistory

