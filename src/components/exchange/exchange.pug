div(class='p+',ng-controller='exchangeCtrl as exchange')
	//-h2(ng-bind='exchange.pair')
	.exchangeLayout
		.topLeft
			#mainChart(height='100%')
			//-iframe#tradingview(name='tradingview', src='/img/tv-chart.html', frameborder='0', allowtransparency='true', scrolling='no', allowfullscreen='', style='display: block; width: 100%; height: 100%;')

		.bottomLeft(class='p+')
			lx-tabs(lx-active-tab='activeTab')
				lx-tab(lx-label='Wallet')
					div.p 
						div On wallet: {{exchange.onWallet}}
						div My wallet: {{exchange.walletAddr}}
					div.p
						div On wallet: {{exchange.ethBal.onWallet}} ETH

				lx-tab(lx-label='My Orders')
				lx-tab(lx-label='Last Trades')

			
		.topRight
			.bids(class='p+',ng-controller='orderbookCtrl', ng-init='fillSide="SELL"')
				h3 Bids
				include ./orderbook
			.asks(class='p+', ng-controller='orderbookCtrl', ng-init='fillSide="BUY"')
				h3 Asks
				include ./orderbook
		.bottomRight
			.sell.placeOrder.p(ng-controller='placeOrderCtrl', ng-init='side="SELL"')
				include ./placeOrder
			.buy.placeOrder.p(ng-controller='placeOrderCtrl', ng-init='side="BUY"')
				include ./placeOrder
