h4(ng-bind='::side=="SELL" ? "Sell" : "Buy"')

lx-text-field(lx-label='Rate', lx-focus='true')
	input(type='text', ng-model='exchange.orders[side].rate')
lx-text-field(lx-label='Amount')
	input(type='text', ng-model='exchange.orders[side].amount')

lx-button(
		lx-color='{{::side=="SELL" ? "red" : "green"}}',
		ng-bind='side=="SELL" ? "Place Sell Order" : "Place Buy Order"'
		lx-size='m')
