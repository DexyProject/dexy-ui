h4 #{side=='SELL' ? 'Sell' : 'Buy'} {{exchange.symbol}}

//- Usually exchanges use the order Price, Amount; sometimes they have amount after
//- TODO show total available amnt
//- TODO slider 


.inputRow
    lx-text-field(lx-label='Rate', lx-fixed-label='true')
        input(ng-model='orders.'+side+'.rate', step='0.000001')
    .label {{::'ETH/'+exchange.symbol}}

.inputRow
    lx-text-field(lx-label='Amount', lx-fixed-label='true')
        input(ng-model='orders.'+side+'.amount', step='0.1')
    .label {{::exchange.symbol}}


.inputRow.percentages(flex-container='row')
    div(flex-item='3')
        lx-button(lx-size='s', lx-type='flat') 25%
    div(flex-item='3')
        lx-button(lx-size='s', lx-type='flat') 50%
    div(flex-item='3')
        lx-button(lx-size='s', lx-type='flat') 75%
    div(flex-item='3')
        lx-button(lx-size='s', lx-type='flat') 100%

.inputRow
    lx-text-field(lx-label='Total', lx-fixed-label='true')
        input(ng-model='orders.'+side+'.total')
    .label ETH

lx-button.action(
        lx-color=side=="SELL" ? "red" : "green"
        lx-size='l'
        ng-disabled='!orders.'+side+'.valid'
        ng-click='placeOrder(orders.'+side+', "'+side+'", exchange.symbol)'
        ) #{side=="SELL" ? "Sell" : "Buy"}

