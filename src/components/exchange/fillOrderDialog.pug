lx-dialog(id='fillOrder', lx-escape-close='true', lx-auto-close='true')
    .modal-content
        .modal-header
            h5.modal-title Fill Order

        .modal-body
            h5 Order&nbsp;
                small.text-muted {{exchange.toFill.order.amount}} {{exchange.symbol}} for {{exchange.toFill.order.rate}} ETH/{{exchange.symbol}}
            .form-row.align-items-end
                .form-group.col
                    label.col-form-label Fill %
                    input.form-control(type='range' min='0' max='1000', ng-model='exchange.toFill.portion')

            .form-row.align-items-end
                .form-group.col
                    label.col-form-label Amount {{exchange.symbol}}
                    input.form-control(type='text', placeholder='amount', ng-model='(exchange.toFill.order.amount * (exchange.toFill.portion/1000)).toFixed(3)', disabled='')
            .form-row.align-items-end
                .form-group.col
                    label.col-form-label ETH
                    input.form-control(type='text', placeholder='eth', ng-model='(exchange.toFill.order.amount * (exchange.toFill.portion/1000) * exchange.toFill.order.rate).toFixed(4)', disabled='')

            .row
                .col
                    p.font-weight-light
                        small Summary: {{exchange.toFill.side == 'BUY' ? 'Selling': 'Buying'}} {{ (exchange.toFill.order.amount * (exchange.toFill.portion/1000)).toFixed(3) }} {{exchange.symbol}} for {{(exchange.toFill.order.amount * (exchange.toFill.portion/1000) * exchange.toFill.order.rate).toFixed(4)}} ETH
        .modal-footer
            .row
                .col.text-right
                    button.btn.btn-primary(type='button') {{exchange.toFill.side === 'BUY' ? 'Sell' : 'Buy'}}
