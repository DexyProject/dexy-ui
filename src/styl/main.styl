
body
	font-family Arial

//- Required for fullscreen, otherwise things go dark
.mainView, .exchangeLayout
	background-color white	

//- Split header
#topBar
	// the tabs are styled as 48px, we don't want this to become anything different
	height 48px
	overflow hidden

	.tabs
		// y to (browser prefix)? 
		user-select none
		-webkit-user-select none
		-moz-user-select none

	#logo
		background url('/img/dexy.png')
		background-size 70%
		background-repeat no-repeat
		background-position center
		cursor pointer

	.indicator
		text-align center
		margin 7px 30px
		.label
			color #888
			font-size 11px
			white-space nowrap
			overflow hidden
		.val
			font-size 13px
	
	.nightSwitch, .fiatSwitch
		margin-top 13px
		margin-right 20px
	.fiatSwitch span
		margin-right 8px
	button
		margin 6px 3px
		
//- Split markets
.markets-table
	th
		font-size 0.9rem
		
	td:nth-child(2), th:nth-child(2)
		display none
	
	.label
		color #888
		font-size 11px

.hideZeroBal
	float right
	margin-top 20px
	margin-right 20px

.searchCard
	float left
	margin-left 40px
	margin-top 20px
	width 300px
	border-bottom 2px solid #eee

//- Split exchangeLayout
.exchangeLayout
	position absolute
	top 65px
	bottom 15px
	left 15px
	right 15px
	
	.topLeft, .bottomLeft, .topRight, .bottomRight
		position absolute
		
	.topLeft, .topRight
		top 0px
		bottom 38%
		
	.bottomLeft, .bottomRight
		height 38%
		bottom 0px
	
	.topLeft, .bottomLeft
		left 0px
		width 60%
		
	.bottomLeft
		border 1px solid rgba(0,0,0,.1)
	
	.topRight, .bottomRight
		left 60%
		right 0px
		
	.bids, .asks, .sell, .buy
		width 50%
		position absolute
		height 100%
		
	.bids, .sell 
		left 0px
	
	.asks, .buy
		right 0px

//- Split orderbook
.orderbook
	text-align left
	font-size 0.8rem
	
	tr, th
		font-weight 500
	tr
		border-bottom 1px solid rgba(0,0,0,0.1)
		cursor pointer
		&:hover
			background-color rgba(0,0,0,0.1)
			

//- Night mode. Terrible
html.nightMode
	-webkit-filter invert(0.75)
	-moz-filter invert(0.75)
	filter invert(0.75)
	background-color: rgb(64,64,64)
	transition 0.3s ease-in
	
	button, img 
		-webkit-filter invert(0.75)
		-moz-filter invert(0.75)
		filter invert(0.75)