
body
	font-family Arial

//- ng-cloak
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

//- Required for fullscreen, otherwise things go dark
.mainView, .exchangeLayout
	background-color white


//- Night mode. Terrible
html.nightMode
	background-color rgb(64,64,64)
	color #eee
	
	.mainView, .exchangeLayout
		background-color rgb(64,64,64)
		
	#topBar
		background-color rgb(84, 84, 84) !important


.switch--accent .switch__input:checked+.switch__label:before {
	background-color: rgba(108, 84, 201, .5)
}

.switch--accent .switch__input:checked+.switch__label:after {
	background-color: #6C54C9
}

.tabs--theme-light.tabs--color-primary .tabs__link:not(.tabs__link--is-disabled).tabs__link--is-active, .tabs--theme-light.tabs--color-primary .tabs__link:not(.tabs__link--is-disabled):hover {
	color: #6C54C9
}