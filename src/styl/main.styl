
body
  font-family Arial
  background-color #f5f5f5
  font-size 0.75rem;
  font-weight 400;

//- ng-cloak
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display none !important;
}

.col
  background-color #fff

.box-shadow
  box-shadow 0 0.25rem 0.75rem rgba(0, 0, 0, .05)

.navbar-light
  background-color #FFF

th
  color #888

.navRow
  font-size .8125rem
  background-color #f5f5f5
  .nav-tabs
    border 0px
  .nav-link
    border 0px
    &:hover
      border 0px
  a
    cursor pointer
    &.nav-link
      color #888

.table
  thead
    th
      border 0


.overlay
  position absolute
  top 0px
  bottom 0px
  left 0px
  right 0px
  background-color rgba(255, 255, 255, 0.8)
  z-index 9
  margin auto
  text-align center