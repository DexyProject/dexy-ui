
body
	font-family Arial

//- Required for fullscreen, otherwise things go dark
.mainView, .exchangeLayout
	background-color white	

//- Split header
#topBar
	// the tabs are styled as 48px, we don't want this to become anything different
	height 48px
	overflow hidden

#topBar .tabs
	// y to (browser prefix)? 
	user-select none
	-webkit-user-select none
	-moz-user-select none
	
#logo
	background url('/img/dexy.png')
	background-size 70%
	background-repeat no-repeat
	background-position center
	cursor pointer

.indicator
	text-align center
	margin 7px 30px
	.label
		color #888
		font-size 11px
	.val
		font-size 13px
		
//- Split markets
.markets-table
	th
		font-size 0.9rem
		
.markets-table
	td:nth-child(2), th:nth-child(2)
		display none
	
.hideZeroBal
	float right
	margin-top 20px
	margin-right 20px

		

//- Split exchangeLayout
.exchangeLayout
	position absolute
	top 65px
	bottom 15px
	left 15px
	right 15px
	
	.topLeft, .bottomLeft, .topRight, .bottomRight
		position absolute
		
	.topLeft, .topRight
		top 0px
		bottom 38%
		
	.bottomLeft, .bottomRight
		height 38%
		bottom 0px
	
	.topLeft, .bottomLeft
		left 0px
		width 60%
		
	.bottomLeft
		border 1px solid rgba(0,0,0,.1)
	
	.topRight, .bottomRight
		left 60%
		right 0px
		
	.bids, .asks, .sell, .buy
		width 50%
		position absolute
		height 100%
		
	.bids, .sell 
		left 0px
	
	.asks, .buy
		right 0px

//- Split orderbook
.orderbook
	text-align left
	tr
		border-bottom 1px solid rgba(0,0,0,0.1)
		cursor pointer
		&:hover
			background-color rgba(0,0,0,0.1)