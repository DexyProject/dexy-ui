body
	font-family Arial
	

#topBar .tabs
	// y to?
	user-select none
	-webkit-user-select none
	-moz-user-select none
	
#logo
	background url('/img/dexy.png')
	background-size 70%
	background-repeat no-repeat
	background-position center
	

.markets-table
	th
		font-size 0.9rem
		
.markets-table td:nth-child(2), th:nth-child(2)
	display none
	

.exchangeLayout
	position absolute
	top 65px
	bottom 15px
	left 15px
	right 15px
	
	.topLeft, .bottomLeft, .topRight, .bottomRight
		position absolute
		
	.topLeft, .topRight
		top 0px
		bottom 38%
		
	.bottomLeft, .bottomRight
		height 38%
		bottom 0px
	
	.topLeft, .bottomLeft
		left 0px
		width 60%
	
	.topRight, .bottomRight
		left 60%
		right 0px
		
	.bids, .asks, .sell, .buy
		width 50%
		position absolute
		height 100%
		
	.bids, .sell 
		left 0px
	
	.asks, .buy
		right 0px
		
	.topLeft 
		bottom 30%
	.bottomLeft
		height 30%